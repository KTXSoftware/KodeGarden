    <treeview id="resourceTree" width="100%" height="50%">
    </treeview>
    
    <listview id="resourceList" width="100%" height="50%">
        <itemrenderer width="100%">
            <hbox width="100%">
                <image id="icon" verticalAlign="center" style="vertical-align:center" /> 
                <label id="name" width="100%" verticalAlign="center" style="vertical-align:center" />
