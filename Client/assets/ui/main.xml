<vbox padding="10" width="100%" height="100%" style="spacing: 10px;">
    <style>
        #buttonInject {
            icon: "img/play-button_grey.png";
        }
        #buttonInject:down {
            icon: "img/play-button.png";
        }

        #buttonRestart {
            icon: "img/repeat_grey.png";
        }
        #buttonRestart:down {
            icon: "img/repeat.png";
        }

        #buttonDownload {
            icon: "img/attachment_grey.png";
        }
        #buttonDownload:down {
            icon: "img/attachment.png";
        }

        #addResourceButton {
            icon: "img/plus_grey.png";
        }
        #addResourceButton:down {
            icon: "img/plus.png";
        }

    </style>
    <box width="100%" style="border-bottom-color: #666666;border-bottom-width: 1px;">
        <label text="KodeGarden" style="font-size: 32px;color:white;" horizontalAlign="right" />
    </box>

    <hbox width="100%" style="padding-top:4px;">
        <button id="buttonInject" text="Compile & Inject" />
        <button id="buttonRestart" text="Compile & Restart" />
        <button id="buttonDownload" text="Download Project" />
    </hbox>

    <hbox width="100%" height="100%" style="spacing: 10px;">
        <style source="../css/main.css" />

        <vbox width="50%" height="100%" style="spacing: 10px;padding-top:4px;">
            <box width="100%" height="70%" styleNames="container">
                <canvas id="khanvas-container" text="Result" width="100%" height="100%" style="background-color: #1E1E1E;" />
            </box>    
            <box width="100%" height="30%" styleNames="container">
                <scrollview id="log" width="100%" height="100%" contentWidth="100%" style="border: none;">
                </scrollview>
            </box>
        </vbox>

        <box width="50%" height="100%" style="padding-top:4px;">
            <tabview id="tabs" width="100%" height="100%">
            </tabview>
        </box>

        <vbox width="250" height="100%">
            <button id="addResourceButton" text="Add Resource" icon="img/plus_grey.png" horizontalAlign="right" iconPosition="right" />
            <box width="100%" height="100%" styleNames="container">
                <listview id="fileList" width="100%" height="100%">
                    <itemrenderer width="100%">
                        <hbox width="100%">
                            <image id="icon" verticalAlign="center" style="vertical-align:center" /> 
                            <label id="name" width="100%" verticalAlign="center" style="vertical-align:center" />
                            <!--
                            <button text="Delete" />
                            -->
                        </hbox>
                    </itemrenderer>
                </listview>
            </box>    
        </vbox>    
    </hbox>
</vbox>