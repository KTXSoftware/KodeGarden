<vbox width="100%" height="100%" style="padding:10px;spacing: 10px;">
    <style source="../css/main.css" />
    <style>
        #buttonInject {
            icon: "img/play-button_grey.png";
        }
        #buttonInject:down {
            icon: "img/play-button.png";
        }

        #buttonRestart {
            icon: "img/repeat_grey.png";
        }
        #buttonRestart:down {
            icon: "img/repeat.png";
        }

        #buttonDownload {
            icon: "img/attachment_grey.png";
        }
        #buttonDownload:down {
            icon: "img/attachment.png";
        }

        #addResourceButton {
            icon: "img/plus_grey.png";
        }
        #addResourceButton:down {
            icon: "img/plus.png";
        }

    </style>

    <hbox width="100%" style="padding-top:4px;">
        <button id="buttonInject" text="Compile & Inject" />
        <button id="buttonRestart" text="Compile & Restart" />
        <button id="buttonDownload" text="Download Project" />
        <button id="buttonSave" text="Save Project" />
    </hbox>

    <hbox width="100%" height="100%" style="spacing: 10px;">
        <vbox width="50%" height="100%" style="spacing: 10px;padding-top:4px; padding-bottom:1px;">
            <khanvas width="100%" height="70%" />
            <log id="log" width="100%" height="30%" />
        </vbox>

        <vbox width="50%" height="100%" style="padding-top: 2px;">
            <tabs id="tabs" width="100%" height="100%" />
        </vbox>    

        <vbox width="250" height="100%" style="padding-top: 2px; padding-bottom:1px;">
            <button id="addResourceButton" text="Add Resource" icon="img/plus_grey.png" horizontalAlign="right" iconPosition="right" />
            <resourcemanager id="resourceManager" width="100%" height="100%" />
        </vbox>    
    </hbox>
</vbox>
