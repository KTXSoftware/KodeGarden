<vbox width="100%" height="100%" style="padding:10px;spacing: 10px;">
    <style source="../css/main.css" />
    <style>
        #buttonInject {
            icon: "img/play-button_grey.png";
        }
        #buttonInject:down {
            icon: "img/play-button.png";
        }

        #buttonRestart {
            icon: "img/repeat_grey.png";
        }
        #buttonRestart:down {
            icon: "img/repeat.png";
        }

        #buttonDownload {
            icon: "img/attachment_grey.png";
        }
        #buttonDownload:down {
            icon: "img/attachment.png";
        }

        #addResourceButton {
            icon: "img/plus_grey.png";
        }
        #addResourceButton:down {
            icon: "img/plus.png";
        }

    </style>

    <hbox width="100%" style="padding-top:4px;">
        <button id="buttonInject" text="Compile & Inject" />
        <button id="buttonRestart" text="Compile & Restart" />
        <button id="buttonDownload" text="Download Project" />
    </hbox>

    <hbox width="100%" height="100%" style="spacing: 5px;">
        <vbox id="box1" width="50%" height="100%" style="spacing: 5px;padding-top:4px; padding-bottom:1px;">
            <khanvas id="khanvasPanel" width="100%" height="70%" />
            <image id="sizer1" resource="img/hsizegrip.png" width="33" height="8" style="cursor:row-resize;" horizontalAlign="center" />
            <log id="log" width="100%" height="30%" />
        </vbox>

        <image id="sizer2" resource="img/vsizegrip.png" width="8" height="33" style="cursor:col-resize;" verticalAlign="center" />
        
        <vbox id="box2" width="50%" height="100%" style="padding-top: 2px;">
            <tabs id="tabs" width="100%" height="100%" />
        </vbox>    

        <image id="sizer3" resource="img/vsizegrip.png" width="8" height="33" style="cursor:col-resize;" verticalAlign="center" />
        
        <vbox id="box3" width="250" height="100%" style="padding-top: 2px; padding-bottom:1px;">
            <button id="addResourceButton" text="Add Resource" icon="img/plus_grey.png" horizontalAlign="right" iconPosition="right" />
            <resourcemanager id="resourceManager" width="100%" height="100%" />
        </vbox>    
    </hbox>
</vbox>
