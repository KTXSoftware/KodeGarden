{
    "compilerOptions": {
        "target": "es2017",
        "module": "amd",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "outDir": "out"
    },
    "include": [
		"./**/*",
		"../Shared/**/*"
	],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": true
}
